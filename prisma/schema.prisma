// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

// Database connection - uses Supabase PostgreSQL
// Uses connection pooler for queries, direct connection for migrations
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model for authentication
model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  accounts       Account[]
  sessions       Session[]
  credits        Credit[]
  ideas          Idea[]
  transactions   Transaction[]
  apiKeys        ApiKey[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// Account model for OAuth
model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Verification token model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User credits model
model Credit {
  id          String   @id @default(cuid())
  userId      String
  type        CreditType
  amount      Int
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Credit type enum
enum CreditType {
  EVALUATION
  BLUEPRINT
}

// User's saved ideas
model Idea {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  qpvScore    Float?
  evaluation  Json?    // Store full evaluation data
  blueprint   Json?    // Store blueprint data
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Transaction history
model Transaction {
  id          String        @id @default(cuid())
  userId      String
  amount      Int
  currency    String        @default("usd")
  status      String        @default("pending") // pending, completed, failed
  type        String        // purchase, refund, etc.
  metadata    Json?         // Store additional data
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  creditItems CreditItem[]

  @@index([userId])
}

// Items included in a transaction (credits, etc.)
model CreditItem {
  id            String      @id @default(cuid())
  transactionId String
  type          CreditType
  amount        Int
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}

// API key for programmatic access
model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  name      String
  key       String   @unique
  lastUsed  DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Webhook event tracking for idempotency
model WebhookEvent {
  id           String   @id @default(cuid())
  eventId      String   @unique // Stripe event ID
  eventType    String
  processed    Boolean  @default(false)
  processedAt  DateTime?
  payload      Json?    // Store full event payload for debugging
  error        String?  // Store error message if processing failed
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([eventId])
  @@index([processed])
}
